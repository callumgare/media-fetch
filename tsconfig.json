{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2018",
    "module": "es2020",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    },
    "noImplicitAny": false,
    "noImplicitThis": false
  },
  "include": ["./src/**/*"]
}

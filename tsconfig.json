{
  "compilerOptions": {
    "outDir": "./dist/",
    "allowJs": true,
    "lib": ["es2022"],
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "@/src/*": ["./*"]
    },
  },
  "include": ["src/**/*"],
}
